<div class="navbar navbar-expand-sm navbar-light navbar-user navbar-link">
  <%= link_to "All lists", root_path, class: "navbar-brand nav-word-border"%>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% if !user_signed_in? %>
          <%= link_to  "Sign in", new_user_session_path, class: "nav-link nav-word-border" %>
        <% else %>
          <li class="nav-item">
            <div class="nav-email">
              <%= current_user.email %>
            </div>
          </li>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link nav-word-border" %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
