<div class="container-margins">
  <div class="btn-back-margin">
    <%= link_to lists_path, class: "btn-back" do %>
      <i class="fas fa-chevron-circle-left"></i> Home
    <% end %>
  </div>

  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input-style",
                  placeholder: "user@email.com" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "input-style",
                  placeholder: "******" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-blue btn-block font-weight-bold" %>
    </div>
  <% end %>

  <div class="mt-4">
    <p class="mb-1 text-center"> Not a member yet? ðŸ‘‡</p>
    <%= render "devise/shared/links" %>
  </div>
</div>