<div class="container-margins">
	<div class="headers-box">
		<h1> <%= @list.title %> </h1>
	</div>
	<% @list.tasks.each do |task| %>
		<% if task.status? %>
			<h5> [âœ”] <del> <%= task.description %> </del>
				<% if policy(List).undone? %>
					<%= render 'undone', task: task %>
				<% end %>
			</h5>
		<% else %>
			<h5> [ ] <%= task.description %>
				<% if policy(List).done? %>
					<%= render 'done', task: task %>
				<% end %>
			</h5>
		<% end %>
	<% end %>

	<%= link_to "Back", root_path %>
</div>